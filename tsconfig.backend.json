{
  "extends": "./tsconfig.base.json",
  "files": ["app.js"],
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["out", "etc", "examples", "static", "**/*.d.ts"],
  "compilerOptions": {
    /* Module resolution */
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    /* Code generation */
    "outDir": "./out/dist",
    "typeRoots": ["./typings", "./node_modules/@types"],
    /* Other options */
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true
  }
}
